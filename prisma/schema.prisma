// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id String @id
    name String @unique
    files File[]
}

model File {
    fid Int @id @default(autoincrement())
    name String @unique
    users User @relation(fields: [uid], references: [id])
    uid String
    texture String @unique
    cars Car[]
}

model Car {
    name String @unique
    folder String @unique
    files File @relation(fields: [fileId], references: [fid])
    fileId Int
}