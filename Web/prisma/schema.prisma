generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id String @id 
    name String @unique
    liveries Livery[]
    steamid BigInt
    admin Int
}

model Livery {
    lid Int @id @default(autoincrement())
    name String @unique
    author User @relation(fields: [uid], references: [id])
    uid String
    texture String @unique
    preview String
    cars Car[]
}

model Car {
    cid Int @id @default(autoincrement())
    name String @unique
    folder String @unique
    liveries Livery[] 
}

model ServerCFG {
    type String @id
    field String
    value String
}