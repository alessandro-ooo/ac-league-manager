generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id String @id 
    name String @unique
    files File[]
}

model File {
    fid Int @id @default(autoincrement())
    name String @unique
    author User @relation(fields: [uid], references: [id])
    uid String
    texture String @unique
    cars Car[]
}

model Car {
    cid Int @id @default(autoincrement())
    name String @unique
    folder String @unique
    liveries File[] 
}